                                },
                                "to": [{ "shell_command": "osascript -e 'tell application \"System Events\"' -e 'if not (exists process \"Mail\") then return' -e 'tell process \"Mail\"' -e 'set vMenu to menu \"View\" of menu bar item \"View\" of menu bar 1' -e 'if exists menu item \"Hide Sidebar\" of vMenu then' -e 'click menu item \"Hide Sidebar\" of vMenu' -e 'else if exists menu item \"Show Sidebar\" of vMenu then' -e 'click menu item \"Show Sidebar\" of vMenu' -e 'else' -e '(* locale fallbacks *)' -e 'if exists menu item \"Seitenleiste ausblenden\" of vMenu then' -e 'click menu item \"Seitenleiste ausblenden\" of vMenu' -e 'else if exists menu item \"Seitenleiste einblenden\" of vMenu then' -e 'click menu item \"Seitenleiste einblenden\" of vMenu' -e 'end if' -e 'end if' -e 'end tell' -e 'end tell'" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
